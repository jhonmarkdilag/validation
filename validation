<script>
	const nameInput = document.getElementById("name");
	const surnameInput = document.getElementById("surname");
	const emailInput = document.getElementById("email");
	const countryInput = document.getElementById("country");
	const cityInput = document.getElementById("city");
	const postcodeInput = document.getElementById("postcode");
	const addresslineInput = document.getElementById("addressline");
	const phonenumberInput = document.getElementById("phonenumber");
	const websiteInput = document.getElementById("website");
	const vatnumbervatnumberInput = document.getElementById("vatnumbervatnumber");
	
	
	const nameError = document.getElementById("name-error");
	const surnameError = document.getElementById("surname-error");
	const emailError = document.getElementById("email-error");
	const countryError = document.getElementById("country-error");
	const cityError = document.getElementById("city-error");
	const postcodeError = document.getElementById("postcode-error");
	const addresslineError = document.getElementById("addressline-error");
	const phonenumberError = document.getElementById("phonenumber-error");
	const websiteError = document.getElementById("website");
	const vatnumbervatnumberError = document.getElementById("vatnumbervatnumber");
			

	nameInput.addEventListener("input", function(){
		if (nameInput.value.length=='') {
			nameError.textContent = "please enter your name";
			nameError.style.display ="block";
		}
		else if (nameInput.value.length <8) {
			nameError.textContent = "username must be at least 8 character";
			nameError.style.display ="block";

		}
		
		else{
			nameError.style.display ="none";
		}

	});

	surnameInput.addEventListener("input", function(){
		if (surnameInput.value.length=='') {
			surnameError.textContent = "please enter your surname";
			surnameError.style.display ="block";
		}
		
		else{
			surnameError.style.display ="none";
		}

	});

        	emailInput.addEventListener("input", function(){
		if (emailInput.value.length=='') {
			emailError.textContent = "please enter your email address";
			emailError.style.display ="block";
		}
		else if (emailInput.value.length <10) { 
			emailError.textContent = "Email address does not have the correct format (missng @gmail)";
			emailError.style.display ="block";

		}	
		else{
			emailError.style.display ="none";
		}


	});
countryInput.addEventListener("input", function(){
		if (countryInput.value.length=='') {
			countryError.textContent = "please enter your Country";
			countryError.style.display ="block";
		}
		
		else{
			countryError.style.display ="none";
		}

	



	});

	
	cityInput.addEventListener("input", function(){
		if (cityInput.value.length=='') {
			cityError.textContent = "please enter your your city";
			cityError.style.display ="block";
		}
		
		
		else{
			cityError.style.display ="none";
		}


	});

		
		postcodeInput.addEventListener("input", function(){
		if (postcodeInput.value.length=='') {
			postcodeError.textContent = "please enter your 4 digit postcode";
			postcodeError.style.display ="block";
		}
		else if (postcodeInput.value.length <13) {
			postcodeError.textContent = "must be 4 digits long";
			postcodeError.style.display ="block";

		}	
		else{
			postcodeError.style.display ="none";
		}


	});

	addresslineInput.addEventListener("input", function(){
		if (addresslineInput.value.length=='') {
			addresslineError.textContent = "please enter your your addressline";
			addresslineError.style.display ="block";
		}
		
		
		else{
			addresslineError.style.display ="none";
		}


	});
		phonenumberInput.addEventListener("input", function(){
		if (phonenumberInput.value.length=='') {
			phonenumberError.textContent = "please enter your mobile number";
			phonenumberError.style.display ="block";
		}
		else if (phonenumberInput.value.length <11) {
			phonenumberError.textContent = "invalid phone number, should be a minimum of 11 digits";
			phonenumberError.style.display ="block";

		}	
		else{
			phonenumberError.style.display ="none";
		}


	});
		
websiteInput.addEventListener("input", function(){
		if (websiteInput.value.length=='') {
			websiteError.textContent = "please enter your your addressline";
			websiteError.style.display ="block";
		}
		
		
		else{
			websiteError.style.display ="none";
		}

	});
		vatnumberInput.addEventListener("input", function(){
		if (vatnumberInput.value.length=='') {
			vatnumberError.textContent = "please enter your 4 digit postcode";
			vatnumberError.style.display ="block";
		}
		else if (vatnumberInput.value.length <13) {
			vatnumberError.textContent = "must be 4 digits long";
			vatnumberError.style.display ="block";

		}	
		else{
			vatnumberError.style.display ="none";
		}


	});

		


	


</script>



